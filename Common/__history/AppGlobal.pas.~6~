unit AppGlobal;

interface

uses
  SysUtils, AppUser, Vcl.Graphics;

type
  TApp = class(TObject)
  private
    FAppName: string;
    FAppDescription: string;
    FAppDate: TDate;
    FVersion: string;
    FUser: TAppUser;
  public

    property AppDate: TDate read FAppDate write FAppDate;
    property Version: string read FVersion write FVersion;
    property AppName: string read FAppName write FAppName;
    property AppDescription: string read FAppDescription write FAppDescription;
    property User: TAppUser read FUser write FUser;

    constructor Create;
    destructor Destroy; override;
  end;

var
  ifn: TIFinance;

implementation

{ TIFinance }

constructor TIFinance.Create;
begin
  if ifn <> nil then
    Abort
  else
  begin
    FAppName := 'i-Finance';
    FAppDescription := 'Integrated Financial Management Information System';

    FPhotoUtility := 'PhotoUtil.exe.';
    FControlDisabledColor := clWhite;
    FMaxComakeredLoans := 3;

    FUser := TAppUser.Create;

    ifn := self;
  end;
end;

destructor TIFinance.Destroy;
begin
  if ifn = self then
    ifn := nil;
  inherited Destroy;
end;

end.
